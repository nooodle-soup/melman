// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  CUSTOMER
  ADMIN
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  userId       String        @unique
  firstName    String
  lastName     String
  role         Role
  customerOf   Vendor[]
  appointments Appointment[]

  @@index([userId])
}

model Vendor {
  id        Int    @id @default(autoincrement())
  name      String
  vendorId  String
  customers User[]

  @@index([vendorId])
}

enum Status {
  WAITING
  RESERVED
}

model Appointment {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  appointed    Status
  reservedTime DateTime?
  createdBy    User      @relation(fields: [creatorId], references: [userId])
  creatorId    String

  @@index([creatorId])
}
